@model eQuiz.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Question.Text):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question.Text)
        </dd>
    </dl>
    
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            @foreach (var Answer in Model.Answers)
            {
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 col-sm-offset-2 col-sm-10">
                        @Html.RadioButtonFor(model => Answer.Text, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.DisplayFor(model => Answer.Text, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Answer.Text, "", new { @class = "text-danger" })
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-offset-4 col-md-8 col-sm-offset-4 col-sm-8">
                    <input type="submit" value="Next" class="btn btn-default" style="width:150px;" />
                </div>
            </div>
        </div>
    }
</div>
