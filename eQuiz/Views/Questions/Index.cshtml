@model IEnumerable<eQuiz.Models.Question>

@{
    ViewBag.Title = "Questions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <p></p><p>@Html.ActionLink("Create Question", "Create", "", new { @class = "btn btn-primary" })</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="list-group">
                <a href="#" class="list-group-item active">Questions</a>
                @foreach (var item in Model) {
                    <div class="list-group-item">
                        @item.Text
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </div>
                    <div class="list-group-item">
                        @*<h4 class="list-group-item-heading">
                            List group item heading
                        </h4>*@
                        <ul>
                        @foreach(var Answer in item.Answers)
                        {
                            <li class="list-group-item-text" style="@((Answer.IsCorrect) ? "color:#41a040;font-weight:bold;" : string.Empty)">@Answer.Text</li>
                        }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>